<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

    </div>

    <div class="row">
    <div class="col-sm-4">
    <div class=review>

      <% if current_user %>

      <div >
        <%= form_for [@product, @review] do |f| %>
        <h5>Your Review</h5>
        <%=f.text_area :description%>
        <br>
        <p><h5>Rate this product!</h5>
          <%= f.number_field :rating, in: 1...6 %></p>
        <%=f.submit "Submit", class: "btn btn-primary"%>
        </div>
      <% end %>
      <% end %>


      </div>
      </div>
        <div class="col-sm-8">

          <% sort = @product.reviews.reverse %>
          <% sort.each do |review| %>
            <%= render 'review', review: review %>
          <% end %>
        </div>

    </div>

  </article>

</section>
