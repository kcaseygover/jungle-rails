<dl class="dl-horizontal">
<% if review.rating && review.description %>
  <dt>Description</dt>
  <dd><%= review.description %></dd>
  <dt>Rating scale of 1-5</dt>
  <dd><%= review.rating %></dd>
  <% if (current_user && review.user_id == current_user.id) %>
  <dt><%= link_to fa_icon('trash'), [@product,review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></dt>
<% end %>
<% end %>

</dl>
